@model WendlandtVentas.Web.Models.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "¿Olvidó la contraseña?";
}
<div class="text-center">
    <a href="~/">
        <img src="~/images/logo.png"class="mx-auto form-logo mb-3" />
    </a>
</div>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card-group">
            <div class="card p-4">
                <div class="card-body">
                    <h2>@ViewData["Title"]</h2>
                    <p class="text-muted">Ingrese su correo electrónico</p>
                    <form asp-action="ForgotPassword" method="post" class="focus-first">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="mb-4">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                                </div>
                                <input asp-for="Email" class="form-control" placeholder="Correo electrónico">
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                        &emsp;
                        <a asp-controller="Account" asp-action="Login">Volver</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>