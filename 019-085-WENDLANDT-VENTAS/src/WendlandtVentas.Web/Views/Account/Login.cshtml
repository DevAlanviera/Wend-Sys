@model WendlandtVentas.Web.Models.AccountViewModels.LoginViewModel

@{
    ViewData["Title"] = "Acceder";
}
    <div class="text-center">
        <a href="~/">
            <img src="~/images/logo.png" class="mx-auto form-logo mb-3" />
        </a>
    </div>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card-group">
            <div class="card p-4">
                <form form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="card-body">
                    <h1>@ViewData["Title"]</h1>
                    <p class="text-muted">Inicie sesión con su cuenta</p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="far fa-user"></i></span>
                        </div>
                        <input asp-for="Email" class="form-control" placeholder="Usuario">
                        <div asp-validation-for="Email" class="text-danger"></div>
                    </div>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="far fa-lock"></i></span>
                        </div>
                        <input asp-for="Password" class="form-control" placeholder="Contraseña">
                        <div asp-validation-for="Password" class="text-danger"></div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary px-4">Acceder</button>
                        </div>
                        <div class="col-6 text-right">
                            <a asp-action="ForgotPassword" class="btn btn-link px-0"> ¿Olvidaste la contraseña?</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>