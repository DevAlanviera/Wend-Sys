@model WendlandtVentas.Web.Models.ClientViewModels.ImportClientModel

<div class="modal-dialog" role="document">
    <form asp-action="@ViewData["Action"]" enctype="multipart/form-data" asp-antiforgery="true" class="modal-content forma-ajax--modal"> 
        <div class="modal-header">
            <h4 class="modal-title" id="addModal-label">@ViewData["ModalTitle"]</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <p class="text-muted">Campos marcados con asterisco ( <b class="text-danger">*</b> ) son requeridos</p>
            <div class="form-group">
                @Html.LabelFor(m => m.ExcelFile)
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-font text-primary"></i></span>
                    </div>
                    @Html.TextBoxFor(m => m.ExcelFile, new { @class = "form-control", type = "file" })
                </div>
                @Html.ValidationMessageFor(m => m.ExcelFile, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="modal-errores text-danger"></div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
</div>

